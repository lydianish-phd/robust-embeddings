# CORPUS=multilexnorm2021/en
# CORPUS_PARTS="train dev test"

#------------------ ROCSMT ------------------#

# NOISY_LANGS=raw.en
# TARGET_LANG=norm.en
# EXPERIMENT_DIR=$CHECKPOINT_DIR
# INPUT_DIR=$DATASETS
# CORPUS=rocsmt
# CORPUS_PARTS="test"

#------------------ ACCIDENTS ------------------#

NOISY_LANGS=src
TARGET_LANG=ref
EXPERIMENT_DIR=$CHECKPOINT_DIR
INPUT_DIR=$DATASETS
CORPUS=accidents
CORPUS_PARTS="test"

for CORPUS_PART in $CORPUS_PARTS
do
    EMBED_DIR=$EXPERIMENT_DIR/embeddings/${MODEL_NAME[$SLURM_ARRAY_TASK_ID]}/$CORPUS/$CORPUS_PART
    OUTPUT_DIR=$EXPERIMENT_DIR/scores/${MODEL_NAME[$SLURM_ARRAY_TASK_ID]}/$CORPUS/$CORPUS_PART
    
    mkdir -p $EMBED_DIR $OUTPUT_DIR

    echo "$CORPUS_PART"
    
    echo " - calculating xsim and cos dist"

    python3 $LASER/source/eval.py                \
        --base-dir $INPUT_DIR                         \
        --corpus $CORPUS                        \
        --corpus-part $CORPUS_PART               \
        --margin ratio                           \
        --src-encoder ${MODEL_PATH[$SLURM_ARRAY_TASK_ID]}  \
        --src-tokenizer ${TOKENIZER[$SLURM_ARRAY_TASK_ID]}  \
        --src-vocab-file ${VOCAB_FILE[$SLURM_ARRAY_TASK_ID]} \
        --src-langs $NOISY_LANGS \
        --tgt-langs $TARGET_LANG \
        --output-dir $OUTPUT_DIR \
        --embed-dir $EMBED_DIR \
        --cosine-distances \
        --verbose 

done

echo "Done..."

